{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}